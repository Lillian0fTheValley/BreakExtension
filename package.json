{
  "name": "break",
  "displayName": "break",
  "description": "take a break!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "break.takeABreak",
        "title": "takeABreak"
      },
      {
        "command": "break.launchPythonGUI",
        "title": "Launch Break Reminder GUI"
      }
    ]
    ,
    "configuration": {
      "title": "Break: Reminders",
      "properties": {
        "break.reminders.water.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable water break reminders"
        },
        "break.reminders.eye.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable eye break reminders"
        },
        "break.reminders.stretch.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable stretch break reminders"
        },
        "break.reminders.walk.enabled": {
          "type": "boolean",
          "default": true,
          "description" : "Enable walk break reminders"
        },
        "break.reminders.showNotification": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for reminders"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
